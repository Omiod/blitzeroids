Dim qcos_.q(35)
Dim qsin_.q(35)
Dim tcos.q(35)
Dim tsin.q(35)
For n=0 To 35
  qcos_(n)=(Int((-Cos((n*Pi*2)/36-Pi/2))*1000))/5000
  qsin_(n)=(Int((Sin((n*Pi*2)/36-Pi/2))*1000))/5000
  tcos(n)=(Int((-Cos((n*Pi*2)/36-Pi/2))*1000))/145
  tsin(n)=(Int((Sin((n*Pi*2)/36-Pi/2))*1000))/145
Next

Dim xs.q(20,1)
Dim ys.q(20,1)
Dim sc.q(20,1)

Dim ff.b(7)
Dim fw.b(7)
Dim fx.q(7)
Dim fy.q(7)
Dim fvx.b(7)
Dim fvy.b(7)
Dim fsh.w(7)

Dim mx.q(12)
Dim my.q(12)
Dim vx.q(12)
Dim vy.q(12)
Dim mf.b(12)
Dim md.b(12)
Dim msh.w(12)
Dim mhit.b(12)

For l=0 To 20
  xs(l,0)=Rnd(320+32)
