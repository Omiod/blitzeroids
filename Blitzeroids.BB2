Next

VWait 60
RGB 0,0,0,0
Cls 0
Gosub UpdateLifes


db=0
dir=0
vx.q=0
vy.q=0
ovx.q=0
ovy.q=0
fire=0
fr=0
ojf=0
status=1
stattime=0

BlitzKeys On

bonus {0}

Repeat
  i$=Inkey$
  If i$<>""
    If i$="p"
      Use BitMap 0
      Show 0,32,32
      Mex {-1,155,"    PAUSED"}
      Repeat
        i$=Inkey$
      Until i$="p" OR Joyb(1)<>0
      Cls 0
    EndIf
    If i$=" " AND Joyy(1)=1
      Use BitMap 0
      Show 0,32,32
      Colour 31
      Locate 6,5
      Print "Nr Flg Hits"
      For n=0 To 11
        Locate 6,6+n
        Print n,"   ",mf(n),"   ",mhit(n)
      Next
      Locate 6,18
      Print "Next:",nexmet
      Locate 6,19
      Print "Tot :",meteors
      Locate 19,4
      Print "VX:",vx
      Locate 19,5
      Print "VY:",vy
      Locate 19,6
      Print "% Shoot ",ufoshoot
      While Inkey$<>" " AND Joyb(1)=0:Wend
      Cls 0
    EndIf
  EndIf
  VWait
  Show db,32,32
  db=1-db
  Use BitMap db
  UnQueue db
  ;                                            Stelle
  For n=0 To 9
    Plot xs(n,db),ys(n,db),0
    xs(n,db)=QWrap(xs(n,db)-vx,0,384)
    ys(n,db)=QWrap(ys(n,db)-vy,0,320)
    Plot xs(n,db),ys(n,db),sc(n,db)
  Next
If status=2
  Select keymode
  Case 0
    jf=Joyb(1)
    dd=Joyx(1)
    tt=Joyy(1)
    dir=QWrap(dir-dd,0,36)
  Case 1
    jf=Joyb(0)
    dd=Sgn(MouseXSpeed)
    dir=QWrap(dir-dd,0,36)
    tt=0
    If jf=2
      tt=-1
    EndIf
    If jf=3
      tt=1
    EndIf
  Case 2
    jf=Abs(RawStatus(42))
    dd=0
    If RawStatus(49) Then dd=-1
    If RawStatus(50) Then dd=1
    dir=QWrap(dir-dd,0,36)
    tt=0
    If RawStatus(41) Then tt=-1
    If RawStatus(64) Then tt=1
  End Select
  If tt=-1
    vx=vx+qcos_(dir)
    vy=vy+qsin_(dir)
    QBlit db,127+dir,184,152
  Else
    QBlit db,91+dir,184,152
  EndIf
;                                              Hyperspace
  If tt=1
    Sound 3,1
    status=1
    RGB 0,15,15,15
    VWait 2
    RGB 0,0,0,0
    ovx=vx
    ovy=vy
    mm=Rnd(36)
    vx=tcos(mm)
    vy=tsin(mm)
  EndIf
  ;                                            Tasto di fuoco

  If jf=1 AND ojf=0
    If ff(fire)=0
      Sound 0,1
      ff(fire)=1
      fw(fire)=0
      fx(fire)=190
      fy(fire)=158
      fvx(fire)=tcos(dir)+vx
      fvy(fire)=tsin(dir)+vy
      fsh(fire)=dir+283
      fire=QWrap(fire+1,0,5)
    EndIf
  EndIf
EndIf

If status =0   ;             Booomm...
  stattime=stattime+1
  If 253+stattime<=268
    QBlit db,253+stattime,184-8,152-8
  EndIf
  vx=vx*.95
  vy=vy*.95
  If stattime>100
    If lifes<1
      Goto Gameover
    Else
      mm.b=0
      For n=0 To 11
        If mf(n)>0
          If RectsHit(178,146,28,28,mx(n),my(n),md(n),md(n))
            mm=1
          EndIf
        EndIf
      Next
      If mm=0
        status=2
        stattime=0
        vx=0
        vy=0
      Else
        stattime=0
      EndIf
    EndIf
  EndIf
EndIf
If status=1   ;             Zzwoop!
  stattime=stattime+1
  If stattime>100
    If meteors=0
      Gosub Init
      level=QLimit(level+1,0,120)
      Goto Game
    EndIf
    Sound 3,1
    For n=15 To 0 Step -1
      RGB 0,n,n,n
      VWait
    Next
    status=2
    stattime=0
    vx=ovx
    vy=ovy
  EndIf
EndIf

  ;                                            Proiettili
  For n=0 To 4
    If ff(n)=1
      fx(n)=QWrap(fx(n)+fvx(n)-vx,0,384-5)
      fy(n)=QWrap(fy(n)+fvy(n)-vy,0,320-5)
      QBlit db,fsh(n),fx(n),fy(n)
      fw(n)=fw(n)+1
      For m=0 To 11
        If mf(m)<>0
          If RectsHit(fx(n),fy(n),4,4,mx(m),my(m),md(m),md(m))
            mhit(m)=mhit(m)-1
            If mhit(m)<1
            Select mf(m)
            Case 1
              mf(m)=0
              mhit(m)=0
              meteors=meteors-1
              bonus {100}
              Sound 2,12
            Case 2
              mf(m)=1
              md(m)=8
              msh(m)=60
              mhit(m)=1
              mf(nexmet)=mf(m)
              md(nexmet)=md(m)
              msh(nexmet)=msh(m)
              mhit(nexmet)=1
              mx(nexmet)=mx(m)
              my(nexmet)=my(m)
              vx(nexmet)=vx(m)+Rnd*Sgn(fvx(n))
              vy(nexmet)=vy(m)+Rnd*Sgn(fvy(n))
              nexmet=nexmet+1
              meteors=meteors+1
              bonus{250}
              Sound 2,12
            Case 3
              mf(m)=2
              md(m)=16
              msh(m)=30
              mhit(m)=2+Rnd(2)
              mf(nexmet)=mf(m)
              md(nexmet)=md(m)
              msh(nexmet)=msh(m)
              mhit(nexmet)=2+Rnd(2)
              mx(nexmet)=mx(m)
              my(nexmet)=my(m)
              vx(nexmet)=vx(m)+(Int((Rnd*3-1)ASL 1*level))ASR 5
              vy(nexmet)=vy(m)+(Int((Rnd*3-1)ASL 1*level))ASR 5
              vx(m)=vx(m)+(Int((Rnd*3-1)ASL 1 *level))ASR 5
              vy(m)=vy(m)+(Int((Rnd*3-1)ASL 1*level))ASR 5
              nexmet=nexmet+1
              meteors=meteors+1
              bonus{400}
              Sound 2,12
            Case 4
              mf(m)=5
              md(m)=32
              msh(m)=253
              mx(m)=mx(m)-8
              my(m)=my(m)-8
              mm=Rnd(36)
              vx(m)=(tcos(mm)ASL1)/3
              vy(m)=(tsin(mm)ASL1)/3
              meteors=meteors-1
              mhit(m)=0
              bonus{500}
              Sound 5,4
            Case 6
              mf(m)=5
              md(m)=32
              msh(m)=253
              mx(m)=mx(m)-8
              my(m)=my(m)-8
              mm=Rnd(36)
              meteors=meteors-1
              mhit(m)=0
              bonus{1000}
              Sound 5,4
            End Select
            If meteors=0
              Use Slice 1
              Use BitMap 2
              Boxf 100,0,351,19,0
              Mex {160,0,"HYPERSPACE"}
              Use Slice 0
              Use BitMap db
            EndIf
            Else
              Select mf(m)
              Case 1
                Sound 1,2
              Case 2
                Sound 1,2
              Case 3
                Sound 1,2
              Case 4
                Sound 4,2
              Case 6
                Sound 4,2
            End Select
            EndIf
            ff(n)=0
            Pop For
            Goto ProxSparo
          EndIf
        EndIf
      Next
  ProxSparo
      If fw(n)>24
        ff(n)=0
      EndIf
    EndIf
  Next

  For n=0 To 11                      ;  Meteoriti
    If mf(n)>0 AND mf(n)<4
      mx(n)=QWrap(mx(n)+vx(n)-vx,0,352)
      my(n)=QWrap(my(n)+vy(n)-vy,0,288)
      QBlit db,msh(n)+fr,mx(n),my(n)
      If RectsHit(188,156,8,8,mx(n),my(n),md(n),md(n))
        If status=2
          lifes=lifes-1
          Gosub UpdateLifes
          Sound 5,3
          status=0
        EndIf
      EndIf
    EndIf
    If mf(n)=4                      ;    Mine
      mx(n)=QWrap(mx(n)+vx(n)-vx,0,352)
      my(n)=QWrap(my(n)+vy(n)-vy,0,288)
      QBlit db,msh(n)+fr,mx(n),my(n)
      If RectsHit(188,156,8,8,mx(n),my(n),md(n),md(n))
        If status=2
          Sound 5,3
          lifes=lifes-1
          Gosub UpdateLifes
          status=0
        EndIf
      EndIf
    EndIf
    If mf(n)=6                         ;  Ufo
      mx(n)=QWrap(mx(n)+vx(n)-vx,0,352)
      my(n)=QWrap(my(n)+vy(n)-vy,0,288)
      QBlit db,msh(n)+fr,mx(n),my(n)
      If RectsHit(188,156,8,8,mx(n),my(n),md(n),md(n))
        If status=2
          Sound 5,3
          lifes=lifes-1
          Gosub UpdateLifes
          status=0
        EndIf
      EndIf
      If Rnd>.992
        mm=Rnd(36)
        vx(n)=tcos(mm)/5
        vy(n)=tsin(mm)/5
      EndIf
      If Rnd<ufoshoot AND mf(11)=0
        mf(11)=7
        md(11)=5
        msh(11)=90
        mx(11)=mx(n)+8
        my(11)=my(n)+6
        vx(11)=Sgn(190-mx(11))*3
        vy(11)=Sgn(160-my(11))*3
        mhit(11)=0
      EndIf
    EndIf

    If mf(n)=5                        ; Esplosioni
      mx(n)=QWrap(mx(n)+vx(n)-vx,0,352)
      my(n)=QWrap(my(n)+vy(n)-vy,0,288)
      QBlit db,msh(n)+mhit(n),mx(n),my(n)
      If RectsHit(188,156,8,8,mx(n),my(n),md(n),md(n))
        If status=2
          Sound 5,3
          lifes=lifes-1
          Gosub UpdateLifes
          status=0
        EndIf
      EndIf
      mhit(n)=mhit(n)+1
      If mhit(n)>15
        mf(n)=0
      EndIf
    EndIf

    If mf(n)=7                          ; Sparo nemico
      mx(n)=QWrap(mx(n)+vx(n)-vx,0,352)
      my(n)=QWrap(my(n)+vy(n)-vy,0,288)
      QBlit db,90,mx(n),my(n)
      If RectsHit(188,156,8,8,mx(n),my(n),md(n),md(n))
        If status=2
          Sound 5,3
          lifes=lifes-1
          Gosub UpdateLifes
          status=0
        EndIf
      EndIf
      mhit(n)=mhit(n)+1
      If mhit(n)>30
        mf(n)=0
      EndIf
    EndIf

  Next
  If db
    fr=QWrap(fr+1,0,30)
  EndIf
  ojf=jf
Until i$="q"
End

