.Init
kind=((level-1) MOD 3)+1
Select kind.b
Case 1
  meteors=QLimit(level/5+1,1,3)
  other.b=QLimit(Rnd(level),0,(3-meteors)ASL 2)
Case 2
  meteors=0
  other.b=QLimit(level/6+Rnd(3)+2,1,12)
Case 3
  mm=Rnd(3)+1
  Select mm
  Case 1
    meteors=0
    other.b=0
  Case 2
    meteors=Rnd(2)+1
    other.b=0
  Case 3
    meteors=0
    other.b=QLimit(Rnd(level)+1,0,9)
  End Select
End Select

nexmet=0
For l=0 To 11
  mf(l)=0
  mhit(l)=0
Next

For l=0 To 11
  mx(nexmet)=0
  my(nexmet)=Rnd(256)

  If nexmet<meteors
    vx(nexmet)=(Int((Rnd*3-1)*10))/15
    vy(nexmet)=(Int((Rnd*3-1)*10))/15
    mf(nexmet)=3
    md(nexmet)=30
    msh(nexmet)=0
    mhit(nexmet)=4+Rnd(3)
    nexmet=nexmet+1
  Else
    If other>0
      vx(nexmet)=(Int((Rnd*3-1)*3*level))/50
      vy(nexmet)=(Int((Rnd*3-1)*3*level))/50
      mf(nexmet)=4
      md(nexmet)=16
      msh(nexmet)=223
      mhit(nexmet)=5+Rnd(4)
      other=other-1
      nexmet=nexmet+1
    Else
      mf(nexmet)=0
    EndIf
  EndIf

Next
If kind=3
  mm=Rnd(36)
  vx(nexmet)=tcos(mm)/5
  vy(nexmet)=tsin(mm)/5
  mf(nexmet)=6
  md(nexmet)=16
  msh(nexmet)=319
  mhit(nexmet)=8+level/6
  nexmet=nexmet+1
EndIf
meteors=nexmet
ufoshoot=level/280
Return



